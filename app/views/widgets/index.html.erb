<% if notice || alert %>
  <p class="general-alerts">
    <span class="notice"><%= notice %></span>&nbsp;<span class="alert"><%= alert %></span>
  </p>
<% end %>

<nav>
  <%= render 'shared/menu' %>
</nav>

<div class="store-container">
  <div class="store-pane">
    <h1>Widget Store</h1>

    <% if !@widgets.nil? && @widgets.size != 0 %>
      <% @widgets.each do |widget| %>
        <% if !widget.logo_url.nil? && widget.logo_url != "" %>
          <%= link_to raw("<figure><div class='widget-logo-bg'>") + image_tag(widget.logo_url, alt: widget.widget_name) + raw("</div><figcaption>") + widget.widget_name + raw("</figcaption></figure>"), widget %>
        <% else %>
          <%= link_to raw("<figure><div class='widget-logo-bg'><p>X</p></div><figcaption>") + widget.widget_name + raw("</figcaption></figure>"), widget %>
        <% end %>
      <% end %>
    <% else %>
      <p>No widgets found. Sorry!</p>
    <% end %>
  </div>
</div>

