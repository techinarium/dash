<nav>
  <%= render 'shared/menu' %>
</nav>

<div class="store-container">
  <div class="store-pane">
    <h1>Widget Store</h1>
    <% if !@widgets.nil? && @widgets.size != 0 %>
      <% @widgets.each do |widget| %>
        <%= link_to widget do %>
          <figure>
            <div class="widget-logo-bg">
              <% if !widget.logo_url.nil? && widget.logo_url != "" %>
                <%= image_tag widget.logo_url, alt: widget.widget_name %>
              <% else %>
                <p>X</p>
              <% end %>
            </div>
            <figcaption>
              <span class="widget-title"><%= widget.widget_name %></span>
              <span class="widget-rating">
                <% if (avg_rating = widget.reviews.all.average(:rating)).nil? %>
                  &#9734;
                <% else %>
                  <%= avg_rating.round %> &#9733;
                <% end %>
              </span>
            </figcaption>
          </figure>
        <% end %>
      <% end %>
    <% else %>
      <p>No widgets found</p>
    <% end %>
  </div>
</div>
<div class="store-container">
  <div class="store-pane">
    <h1>Top 10 Widgets</h1>
    <% @top_10.each do |widget| %>
      <%= link_to widget do %>
        <figure>
          <div class="widget-logo-bg">
            <% if !widget.logo_url.nil? && widget.logo_url != "" %>
              <%= image_tag widget.logo_url, alt: widget.widget_name %>
            <% else %>
              <p>X</p>
            <% end %>
          </div>
          <figcaption>
            <span class="widget-title"><%= widget.widget_name %></span>
            <span class="widget-rating"><%= widget.reviews.all.average(:rating).round %> &#9733;</span>
          </figcaption>
        </figure>
      <% end %>
    <% end %>
  </div>
</div>
