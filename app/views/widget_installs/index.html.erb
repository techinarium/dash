<p id="notice"><%= notice %></p>

<h1>Widget Installs</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Widget</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @widget_installs.each do |widget_install| %>
      <tr>
        <td><%= widget_install.user %></td>
        <td><%= widget_install.widget %></td>
        <td><%= link_to 'Show', widget_install %></td>
        <td><%= link_to 'Edit', edit_widget_install_path(widget_install) %></td>
        <td><%= link_to 'Destroy', widget_install, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Widget Install', new_widget_install_path %>
